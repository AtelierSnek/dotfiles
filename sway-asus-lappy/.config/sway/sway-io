# Specific IO File for our Zen Dekstop

# ==== Inputs ====

# ==== Outputs ====

output eDP-1 {
  resolution 2560x1440
  scale 1.25
  adaptive_sync on
  allow_tearing yes
  max_render_time off
  pos 0 0
}

output HDMI-A-1 {
  resolution 1920x1080
  adaptive_sync on
  pos 2200 0
  scale 1.0
}

bindsym $mod+p output HDMI-A-1 power toggle

